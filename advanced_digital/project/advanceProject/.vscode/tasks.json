{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Verilog",
      "type": "shell",
      "command": "iverilog",
      "args": ["-o", "output_file", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Verilog",
      "type": "shell",
      "command": "vvp",
      "args": ["output_file"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
